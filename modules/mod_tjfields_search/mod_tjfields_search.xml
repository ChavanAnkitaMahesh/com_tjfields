<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="module" client ="site" method="upgrade">
	<name>tjfields - Search</name>
	<author>TechJoomla</author>
	<authorEmail>extensions@techjoomla.com</authorEmail>
	<authorUrl>www.techjoomla.com</authorUrl>
	<copyright>Copyright(C)2012-15 TechJoomla</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<creationDate>30 Dec 2015</creationDate>
	<version>2.5.5</version>
	<description>Module to search</description>
	<files>
		<filename module="mod_tjfields_search">mod_tjfields_search.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_tjfields_search.ini</language>
	</languages>
	<!-- Fields for Joomla 1.6.x and onwards -->
	<config name="params">
		<fields name="params">
			<fieldset name="basic">
				<field name="client_type" type="text" default="" label="MOD_TJFIELDS_SEARCH_CLIENT_TYPE" description="MOD_TJFIELDS_SEARCH_CLIENT_TYPE_DESC"/>

				<field name="category_type" type="text" default="" label="MOD_TJFIELDS_SEARCH_CATEGORY_TYPE" description="MOD_TJFIELDS_SEARCH_CATEGORY_TYPE_DESC"/>

				<field name="url_cat_param_name" type="text" default="" label="MOD_TJFIELDS_SEARCH_URL_CATEGORY_PARAM_NAME" description="MOD_TJFIELDS_SEARCH_URL_CATEGORY_PARAM_NAME_DESC"/>
			</fieldset>

			<fieldset name="advanced">
				<field name="moduleclass_sfx" type="text" default="" label="MOD_SUFIX" description="MOD_SUFIX_DES" />
			</fieldset>
		</fields>
	</config>
</extension>